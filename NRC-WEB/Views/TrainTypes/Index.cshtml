@using NRC_WEB.Models
@model IEnumerable<NRC_WEB.Models.TrainType>

@{
    ViewBag.Title = "Train Types";
    var travelClasses = (IEnumerable<TravelClass>)ViewBag.TravelClasses;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        @foreach (var item in travelClasses)
        {
            <th style="text-align:center">
                @item.Name Seats
            </th>
        }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        @foreach (var travelClass in travelClasses)
        {
            <td align="center">
               @item.GetTravelClassSeatCount(travelClass)
            </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
